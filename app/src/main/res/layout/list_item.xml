<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/txtWifiName"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:padding="0dp"

        ></TextView>

    <TextView
        android:id="@+id/txtWifiRSSI"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:padding="0dp"
        android:layout_toRightOf="@id/txtWifiMAC"></TextView>

    <TextView
        android:id="@+id/txtWifiMAC"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:padding="0dp"
        android:layout_toRightOf="@id/txtWifiName"
        ></TextView>



</RelativeLayout>