<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txtWifiName"
        android:layout_width="131dp"
        android:layout_height="match_parent"
        android:drawableBottom="@drawable/wifi_signal"
        android:padding="20dp"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat"
        android:textSize="13sp"
        android:text="Name"
        android:textStyle="bold"
        ></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtWifiMAC"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="MAC_address"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"

            ></TextView>

        <TextView
            android:id="@+id/textWifiDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:layout_below="@id/txtWifiMAC"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/txtWifiRSSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="RSSI"
            android:fontFamily="@font/montserrat"
            android:layout_below="@id/textWifiDistance"
            android:textStyle="normal"

            ></TextView>

    </RelativeLayout>


</LinearLayout>

