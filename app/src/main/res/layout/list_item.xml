<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txtWifiName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:padding="20dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            >

        </TextView>

        <TextView
            android:id="@+id/txtWifiStrength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@id/txtWifiName"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/list_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
      >

        <TextView
            android:id="@+id/txtWifiMAC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAC_address"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"

            ></TextView>

        <TextView
            android:id="@+id/textWifiDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Distance"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/white"
            android:layout_below="@id/txtWifiMAC"
            android:textStyle="normal"
            />

        <TextView
            android:id="@+id/txtWifiRSSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="RSSI"
            android:fontFamily="@font/montserrat"
            android:layout_below="@id/textWifiDistance"
            android:textStyle="normal"

            ></TextView>

    </RelativeLayout>


</LinearLayout>